{
	"mpeg2":{
		"type": "container",
		"items": {
			"type": "enum",
			"constraint": {
				"values": [
					"resolution",
					"ratio",
					"fps",
					"rc_mode",
					"gop_size",
					"bitrate",
					"max_bitrate",
					"open_gop",
					"profile",
					"level",
					"ref_frames",
					"encoding_type"
				]
			}
		},
		"constraint": {
			"resolution": {
				"type": "rsl",
				"require": true,
				"forbidden":false,
				"constraint": {
					"dynamic_constraint":{            
						"width": {
							"min_value": 32,
							"max_value": 1920,
							"step": 2,
							"default_value":720
						},
						"height":{
							"min_value": 32,
							"max_value": 1080,
							"step": 2,
							"default_value":576
						}
					},
					"enum_constraint": {
						"default_value": 1,
						"values": [
							"640x480",
							"720x576",
							"1920x1080"
						]
					}
				}
			},
			"ratio": {
				"type": "enum",
				"require": false,
				"forbidden":false,
				"constraint": {
					"default_value": 4,
					"values": [
						"1:1",
						"2:1",
						"4:3",
						"5:4",
						"16:9",
						"16:10"
					]
				}
			},
			"fps": {
				"type": "fps",
				"require": true,
				"forbidden":false,
				"constraint": {
					"dynamic_constraint": {
						"default_value":25,
						"min_value": 1,
						"max_value": 60,
						"step": 1
					},
					"enum_constraint": {
						"values": [
							"25",
							"29.97",
							"30",
							"59.94",
							"60",
							"follow_src"
						]
					}
				}
			},
			"rc_mode": {
				"type": "enum",
				"require": true,
				"forbidden":false,
				"constraint": {
					"default_value": 1,
					"values": [
						"cbr",
						"vbr"
					]
				}
			},
			"gop_size": {
				"type": "num",
				"require": true,
				"forbidden":false,
				"constraint": {
					"default_value": 25,
					"min_value": 1,
					"max_value": 500,
					"step": 1
				}
			},
			"bitrate": {
				"type": "num",
				"require": true,
				"forbidden":false,
				"constraint": {
					"default_value": 3000,
					"min_value": 0,
					"max_value": 200000,
					"step": 1
				}
			},
			"max_bitrate": {
				"type": "num",
				"require": false,
				"forbidden": false,
				"constraint": {
					"default_value": 3000,
					"min_value": 0,
					"max_value": 400000,
					"step": 1
				}
			},
			"max_bframe": {
				"type": "num",
				"require": false,
				"forbidden": false,
				"constraint": {
					"default_value": 2,
					"min_value": 0,
					"max_value": 16,
					"step": 1
				}
			},
			"open_gop": {
				"type": "bool",
				"require": false,
				"forbidden":false,
				"constraint": {
					"default_value": false
				}
			},
			"profile": {
				"type": "enum",
				"require": false,
				"forbidden":false,
				"constraint": {
					"default_value": 1,
					"values": [
						"simple",
						"main",
						"high"
					]
				}
			},
			"level": {
				"type": "enum",
				"require": false,
				"forbidden":false,
				"constraint": {
					"default_value": 1,
					"values": [
						"low",
						"main",
						"high"
					]
				}
			},
			"ref_frames": {
				"type": "num",
				"require": false,
				"forbidden":false,
				"constraint": {
					"default_value": 2,
					"min_value": 0,
					"max_value": 16,
					"step": 1
				}
			},
			"encoding_type": {
				"type": "enum",
				"require": false,
				"forbidden":false,
				"constraint": {
					"default_value": 0,
					"values": [
						"progressive",
						"interlace"
					]
				}
			}
		}
	}
}